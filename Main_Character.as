package{	import flash.display.MovieClip;	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;	import flash.events.Event;		public class Main_Character extends MovieClip	{		public var player:Player = new Player();				private var vx:int;		private var vy:int;		private var speed:uint;				public function Main_Character()		{			init();		}				private function init():void		{			//initialize variables			vx = 0;			vy = 0;			speed = 6;						//Add event listeners			stage.addEventListener(KeyboardEvent.KEY_DOWN, keyDownHandler);			stage.addEventListener(KeyboardEvent.KEY_UP, keyUpHandler);			addEventListener(Event.ENTER_FRAME,enterFrameHandler);						//Add player to stage			stage.addChild(player);		}				//private function keyDownHandler(e:KeyboardEvent):void//		{//			switch(e.keyCode)//			{//				case Keyboard.LEFT://				vx -= speed;//				break;//				//				case Keyboard.RIGHT://				vx += speed;//				break;//				//				case Keyboard.UP://				vy -= speed;//				break;//				//				case Keyboard.DOWN://				vy += speed;//				break;//				//			}//		}				private function keyDownHandler(event:KeyboardEvent):void		{			if (event.keyCode == Keyboard.LEFT)// || event.keyCode == Keyboard.A)			{				vx = -speed;			}			else if (event.keyCode == Keyboard.RIGHT)// || event.keyCode == Keyboard.D)			{				vx = speed;			}			else if (event.keyCode == Keyboard.UP)// || event.keyCode == Keyboard.W)			{				vy = -speed;			}			else if (event.keyCode == Keyboard.DOWN)// || event.keyCode == Keyboard.S)			{				vy = speed;			}		}				private function keyUpHandler(e:KeyboardEvent):void		{			if (e.keyCode == Keyboard.LEFT || e.keyCode == Keyboard.RIGHT)			{				vx = 0;			}			else if (e.keyCode == Keyboard.UP || e.keyCode == Keyboard.DOWN)			{				vy = 0;			}		}				private function enterFrameHandler(e:Event):void		{			//Initialize local variables			var playerHalfWidth:uint = player.width / 2;			var playerHalfHeight:uint = player.height / 2;						//Move the player			player.x += vx;			player.y += vy;						////Stop player at stage edges//			if (player.x + playerHalfWidth > stage.stageWidth)//			{//				player.x = stage.stageWidth - playerHalfWidth;//			}//			else if (player.x - playerHalfWidth < 0)//			{//				player.x = 0 + playerHalfWidth;//			}//			if (player.y < 0)//			{//				player.y = 0;//			}//			else if (player.y + player.height > stage.stageHeight)//			{//				player.y = stage.stageHeight - player.height;//			}						//Screen wrapping			if (player.x - playerHalfWidth > stage.stageWidth)			{				player.x = 0 - playerHalfWidth;			}			else if (player.x + playerHalfWidth < 0)			{				player.x = stage.stageWidth + playerHalfWidth;			}			if (player.y + player.height < 0)			{				player.y = stage.stageHeight;			}			else if (player.y> stage.stageHeight)			{				player.y = 0 - player.height;			}					}	}}